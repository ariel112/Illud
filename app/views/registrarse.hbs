      <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
          <div  class="modal-header">
            <div class="container"> 
             <h5 class="modal-title" id="exampleModalLabel"><img class="iniciar-imagen" src="publico/logo/illud-texto-amarillo.png" width="120px" height="50px"></h5>
           
            </div>
            
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div  class="modal-body">
           
            <form class="ui form" id="signin" name="signin" method="post" action="signin">
              <div class="field">
                <label><b>Usuario:</b></label>
                <input type="email" name="email" placeholder="usuario...">
              </div>
              <div class="field">
                <label><b>Contraseña:</b></label>
                <input type="password" name="password" placeholder="password..">
              </div>
           
                <button class="ui green button inverted fluid" type="submit"><b>iniciar</b></button>
           
              
            </form>
          </div> 
          <div class="modal-footer">              
          </div>
        </div>
